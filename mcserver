#!/usr/bin/env python3
import json
import logging
import os
import pathlib
import sys

current_dir = os.getcwd()

script_name = "mcserver"
script_dirname = f".{script_name}"

script_dir_path = pathlib.Path(current_dir) / script_dirname
configs_dir = script_dir_path / "configs"

default_configs = {
  "server": {
    "jarfile": "Launcher.jar",
    "ram": {
      "min": "512M",
      "max": "2G"
    },
    "hide_gui": True
  }
}

# Setup logger
logger = logging.getLogger(script_name)

# Check directory functions
def ensure_dir_initialized():
  if not script_dir_path.exists():
    raise FileNotFoundError(f"Not a MCServer-managed directory, {script_dirname} does not exist")
  if not script_dir_path.is_dir():
    raise NotADirectoryError(f"'{script_dirname}' must be a directory")

def check_dir_empty(dir_path):
  dir_path = pathlib.Path(dir_path)

  if not dir_path.is_dir():
    raise NotADirectoryError("Cannot check directory empty on non-directory")

  is_empty = True
  for item in os.scandir(dir_path):
    if not item.name == os.path.basename(sys.argv[0]):
      is_empty =  False
      break

  return is_empty

# Configuration fuctions
def generate_config(config_name):
  config_filename = f"{config_name}.json"
  config_path = configs_dir / config_filename
  relative_config_path = os.path.relpath(config_path, current_dir)

  try:
    config_data = default_configs[config_name]
  except KeyError:
    raise KeyError(f"Cannot generate configuration file for {config_name}: no default configuration available")

  except Exception as error:
    raise Exception(f"Failed to get default configuration for {config_name}: {error.lower()}")

  try:
    with open(config_path, mode="xt") as config_file:
      json.dump(
        config_data, config_file,
        indent=2
      )
  except FileNotFoundError:
    raise FileNotFoundError(f"Cannot create configuration file '{relative_config_path}': configuration path does not exists")

  except FileExistsError:
    raise FileExistsError(f"Cannot create configuration file '{relative_config_path}': file already exists")
  except IsADirectoryError:
    raise IsADirectoryError(f"Cannot create configuration file '{relative_config_path}': path is a directory")

  except Exception as error:
    raise Exception(f"Failed to create configuration file for {config_name}: {error}")

def load_config(config_name):
  config_filename = f"{config_name}.json"
  config_path = configs_dir / config_filename
  relative_config_path = os.path.relpath(config_path, current_dir)

  try:
    with open(config_path, mode="rt") as config_file:
      return json.load(config_file)
  except json.JSONDecodeError as error:
    raise ValueError(f"Failed to parse configuration for {config_name}: {error.msg.lower()} at line {error.lineno} column {error.colno}")

  except FileNotFoundError:
    raise FileNotFoundError(f"Cannot read configuration file '{relative_config_path}': file does not exist")

  except PermissionError:
    raise PermissionError(f"Cannot read configuration file '{relative_config_path}': not enough permission")
  except IsADirectoryError:
    raise IsADirectoryError(f"Cannot read configuration file '{relative_config_path}': path is a directory")

  except Exception as error:
    raise Exception(f"Failed to load configuration for {config_name}: {error}")

# Command functions
def initialize_directory():
  if not check_dir_empty(current_dir):
    answer = input("The current directory is not empty, continue anyway? [y/N] ")
    if not answer.lower() == "y":
      log.warning("Command cancelled.")
      sys.exit(1)

  os.makedirs(configs_dir, exist_ok=True)
  generate_config("server")
  logger.info("Directory initialized")

def start_server():
  is_dir_initialized()

  server_config = load_config("server")
  memory_limit = server_config["ram"]

  command_args = [
    "java",
    f"-Xms{memory_limit['min']}",
    f"-Xmx{memory_limit['max']}",
    "-jar",
    server_config["jarfile"]
  ]

  if server_config["hide_gui"]:
    command_args.append("nogui")

  logger.debug(f"Running command: {' '.join(command_args)}")
  os.execvp("java", command_args)

def main():
  logging.basicConfig(
    level=logging.INFO,
    format="[%(levelname)s]: %(message)s"
  )

  cli_args = sys.argv[1:] if len(sys.argv) > 1 else [""]
  command = cli_args[0]

  try:
    match command:
      case "init":
        initialize_directory()
      case "start":
        start_server()
      case "":
        raise Exception("No command was provided")
      case _:
        raise Exception(f"Unknown command: {command}")
  except Exception as error:
    logger.error(error)
    sys.exit(1)

if __name__ == "__main__":
  main()